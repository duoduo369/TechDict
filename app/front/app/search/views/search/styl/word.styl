.search-word-item
  color #fff
  cursor pointer
  float left
  height 120px
  margin .5%
  position relative
  width 24%

.search-word-item h3
  opacity 0.8

.search-word-item span
  opacity 0.6

.rb-overlay {
  opacity: 0;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: all 0.4s ease;
  z-index: -1;
  pointer-events: none;
  cursor: default;
}

.rb-close {
    position: absolute;
    top: 0.4em;
    right: 0.4em;
    width: 2em;
    height: 2em;
    text-indent: -9000px;
    cursor: pointer;
    z-index: 1000;
}

.rb-close:before {
    content: 'x';
    font-weight: 100;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    font-size: 3em;
    line-height: 0.6;
    text-align: center;
    text-indent: 0px;
}

.rb-detail
  width 100%
  height 100%

.rb-detail div
  float left

.rb-detail span
  display  block
  margin auto 0

.rb-detail .search-word
  font-size 40px
  height 100%
  width 30%
  position relative

.rb-detail .search-word .word
  height 100%
  padding 50% 0

.rb-detail .search-word-trans
  width 70%
  height 100%

.rb-detail .search-word-trans .trans-word
  height 14.2857142856%
  opacity 1
