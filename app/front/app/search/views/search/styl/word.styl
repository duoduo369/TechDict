.search-word-item
  color #fff
  cursor pointer
  float left
  height 120px
  margin 0.5% .3%
  position relative
  width 32%
  border-width .2em
  border-style solid

.search-word-item h3
  opacity 0.8

.search-word-item span
  opacity 0.6

.subject-list
  position relative

.subject-list .no-result
  font-size 40px
  color #d9534f
  position absolute
  top 120px

ul.list
    display block

ul.subject-list
    display block

ul.subject-list li
    margin-right .3em
    margin-top .3em

.rb-overlay {
  opacity: 0;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: all 0.4s ease;
  z-index: -1;
  pointer-events: none;
  cursor: default;
}

.rb-close {
    position: absolute;
    top: 0.4em;
    right: 0.4em;
    width: 2em;
    height: 2em;
    text-indent: -9000px;
    cursor: pointer;
    z-index: 1000;
}

.rb-close:before {
    content: 'x';
    font-weight: 100;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    font-size: 3em;
    line-height: 0.6;
    text-align: center;
    text-indent: 0px;
}

.rb-detail
  width 100%
  height 100%

.rb-detail > div
  float left

.rb-detail .search-word
  font-size 40px
  height 100%
  width 30%
  position relative

.rb-detail .search-word .word
  height 100%
  padding 50% 0
  cursor pointer

.rb-detail .search-word .word:hover
  opacity .5

.rb-detail .search-word-trans
  width 70%
  height 100%

.rb-detail .search-word-trans .trans-word
  height 14.2857142856%
  opacity 1
  position relative

.rb-detail .search-word-trans .trans-word.full-height
  height 100%

.rb-detail .search-word-trans .trans-word span
  position relative
  font-size 24px
  top 30%
  cursor pointer

.rb-detail .search-word-trans .trans-word span:hover
  opacity 1

.rb-detail .search-word-trans .trans-word ul
    height 100%
    width 100%

.rb-detail .search-word-trans .trans-word ul li
    display block
    margin 2% 0
    width 100%

.rb-detail .search-word-trans .trans-word ul li a
    color #FFF
    font-size 16px
    opacity 1

.rb-detail .search-word-trans .trans-word ul li a:hover
    opacity .5
